<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/background">
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/icon_camera"
            android:id="@+id/ibtn_camera"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_image" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/icon_image"
            android:id="@+id/ibtn_image"
            app:layout_constraintStart_toEndOf="@+id/ibtn_camera" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/ibtn_camera"/>
</androidx.constraintlayout.widget.ConstraintLayout>