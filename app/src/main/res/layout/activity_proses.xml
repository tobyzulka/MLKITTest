<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProsesActivity">

    <ImageView
            android:layout_width="403dp"
            android:layout_height="407dp" app:srcCompat="@drawable/background"
            android:id="@+id/imgCapture"
            app:layout_constraintStart_toStartOf="@+id/linearLayout" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="323dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:background="@color/colorLinierLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCapture" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/linearLayout">
        <TextView
                android:layout_margin="5dp"
                android:justificationMode="inter_word"
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtHasil" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>